                        </th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.Produkty.Count(); i++)
                    {
                        <tr>
                            <td style="width:20%!important">
								    @*<input asp-for="@Model.PoDetails[i].ProductCode" class="form-control" />*@
