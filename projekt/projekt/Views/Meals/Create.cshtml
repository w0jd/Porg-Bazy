                <thead>
                    <tr>
                        <th>
                            Nazwa
                        </th>
                        <th>
                            Ilość[g/ml]
                        </th>
                        <th>
                            Kaloryczność
                        </th>
                        <th>
                            Białko
                        </th>
                        <th>
                            Tłuszcz
                        </th>
                        <th>
                            Węglowodany
                        </th>
                        <th>
                            Błonnik
                        </th>
                        <th style="width:60px;">
                            <button id='btnAddDetailRow' type="button" class="btn btn-sm btn-secondary visible" onclick="AddItem(this)">
                                Add
