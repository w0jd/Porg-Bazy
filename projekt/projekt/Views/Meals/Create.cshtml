            console.log(btnIdx)
            var idOfQuantity = "Ilosc_"+btnIdx+"_";

            var txtQuantity = document.getElementById(idOfQuantity).value = 0;

            var idOfIsDeleted = "Produkty_" + btnIdx + "__IsDeleted";
            document.getElementById(idOfIsDeleted).value  = "true"

