    {
        <p>twoj dania</p>
    }
    else
    {
        <p>dania innych</p>
    }
    <form method="post" asp-controller="UserMeals" asp-action="AddExistingMealPost">
    <fieldset>
    @foreach (var jadlo in konto?.Jadlospisy)
    {
        
        <legend>@jadlo.Dania.NazwaDania</legend>


        @foreach (var dapro in jadlo?.Dania?.DaniaProdukty)
        {
