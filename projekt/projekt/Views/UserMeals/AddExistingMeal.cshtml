                <span>@dapro.Produkty.Nazwa</span>
                <span>@dapro.Produkty.Kaloryczność</span>
                <br />
                <!-- Dodaj wartości dla innych kolumn -->
           
            
        }
          

        <input style="display:none" name="danie" value="@jadlo.Dania.Id">
                <button type="submit" >Wybierz</button>
    }
</fieldset>
    </form>
}